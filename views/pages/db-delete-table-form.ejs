<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>

<body>

  <%- include('../partials/nav'); %>
  <%- include('../partials/header', {headerText: `Usuwanie danych z tabeli ${tableName}`}); %>
  
  <div class="container">
    <div class="jumbotron">
      <form action="/db/delete/<%= tableName %>" method="POST">
        <div class="form-group">
          <label for="<%= idFieldName %>"><%= idFieldName %>:</label>
          <input type="text" class="form-control" id="<%= idFieldName %>" name="<%= idFieldName %>">
        </div>
        <button type="submit" class="btn btn-primary">Wprowad≈∫</button>
      </form>
    </div>
    <div class="jumbotron">
      <% tables.forEach(table => { %>
        <h2><%= table.tableName %></h2>
        <%- include('../partials/db-basic-table.ejs', {results: table.results}); %>
      <% }) %>
    </div>
  </div>

</body>
</html>